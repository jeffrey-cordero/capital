{
   "Version": "2012-10-17",
   "Statement": [
      {
         "Sid": "EC2",
         "Effect": "Allow",
         "Action": [
            "ec2:*"
         ],
         "Resource": "*"
      },
      {
         "Sid": "IAMRole",
         "Effect": "Allow",
         "Action": [
            "iam:*Role*",
            "iam:PassRole"
         ],
         "Resource": "arn:aws:iam::*:role/capital-*"
      },
      {
         "Sid": "IAMProfile",
         "Effect": "Allow",
         "Action": [
            "iam:*InstanceProfile*"
         ],
         "Resource": "arn:aws:iam::*:instance-profile/capital-*"
      },
      {
         "Sid": "SSM",
         "Effect": "Allow",
         "Action": [
            "ssm:*Session*",
            "ssm:GetConnectionStatus"
         ],
         "Resource": "*"
      },
      {
         "Sid": "Secrets",
         "Effect": "Allow",
         "Action": [
            "secretsmanager:*"
         ],
         "Resource": "arn:aws:secretsmanager:*:*:secret:prod/capital/*"
      },
      {
         "Sid": "SecretsRead",
         "Effect": "Allow",
         "Action": [
            "secretsmanager:ListSecrets"
         ],
         "Resource": "*"
      },
      {
         "Sid": "RDS",
         "Effect": "Allow",
         "Action": [
            "rds:*"
         ],
         "Resource": [
            "arn:aws:rds:*:*:db:capital-*",
            "arn:aws:rds:*:*:subgrp:capital-*",
            "arn:aws:rds:*:*:og:*",
            "arn:aws:rds:*:*:pg:*"
         ]
      },
      {
         "Sid": "RDSDescribe",
         "Effect": "Allow",
         "Action": [
            "rds:Describe*",
            "rds:ListTagsForResource"
         ],
         "Resource": "*"
      },
      {
         "Sid": "ElastiCache",
         "Effect": "Allow",
         "Action": [
            "elasticache:*"
         ],
         "Resource": [
            "arn:aws:elasticache:*:*:cluster:capital-*",
            "arn:aws:elasticache:*:*:subnetgroup:capital-*",
            "arn:aws:elasticache:*:*:parametergroup:*"
         ]
      },
      {
         "Sid": "ElastiCacheDescribe",
         "Effect": "Allow",
         "Action": [
            "elasticache:Describe*",
            "elasticache:List*"
         ],
         "Resource": "*"
      },
      {
         "Sid": "S3",
         "Effect": "Allow",
         "Action": [
            "s3:*"
         ],
         "Resource": [
            "arn:aws:s3:::capital-*",
            "arn:aws:s3:::capital-*/*"
         ]
      },
      {
         "Sid": "CloudFront",
         "Effect": "Allow",
         "Action": [
            "cloudfront:*"
         ],
         "Resource": "*"
      }
   ]
}